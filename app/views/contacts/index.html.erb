<h3>Contacts</h3>
<hr>

<form class="form-inline" role="form">
  <div class="form-group">
    <label for="filter">NON-FUNCTIONAL Filter By Name:</label>
    <input type="filter" class="form-control" id="filter">
  </div>
  <button type="submit" class="btn btn-primary">Search</button>
</form>

<div class="container">

<table  class="table table-striped">
  <thead>
    <tr>
      <th class="col-id">ID</th>
      <th class="col-medium">First name</th>
      <th class="col-medium">Last name</th>
      <th class="col-medium">Phone</th>
      <th>Email</th>
      <th class="col-wide">Created At</th>
      <th class="col-medium">Actions</th>
     </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.id %></td>
        <td><%= contact.first_name %></td>
        <td><%= contact.last_name %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.email %></td>
        <td><%= contact.created_at %></td>
        <td class="container">
          <%= link_to 'Edit', edit_contact_path(contact), method: :get, class: "btn btn-xs btn-default" %>
          <%= link_to 'Delete', contact, method: :delete, class: "btn btn-xs btn-danger", data: { confirm: 'Are you sure you want to destroy this contact record?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= button_to 'New', new_contact_path, class: "btn btn-md btn-primary"  %>
